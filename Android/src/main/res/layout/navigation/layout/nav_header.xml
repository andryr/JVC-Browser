<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

        <ImageView
                android:layout_width="320dp"
                android:layout_height="180dp"
                android:src="@drawable/drawer_image"
                android:visibility="visible"
                android:id="@+id/navigation_header_background"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>

        <com.pentapenguin.jvcbrowser.util.widgets.CircularImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/profil"
                android:layout_margin="25dp"
                android:id="@+id/navigation_header_profile"
                app:civ_border="true"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pseudo"
                android:textSize="24sp"
                android:background="#2000"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:id="@+id/navigation_header_pseudo"
                android:layout_marginStart="@dimen/normal_margin"
                android:layout_marginLeft="@dimen/normal_margin"
                android:layout_marginBottom="@dimen/small_margin"
                android:layout_alignBottom="@+id/navigation_header_background"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>
</RelativeLayout>