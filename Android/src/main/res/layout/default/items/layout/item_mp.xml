<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/two_line_list_height"
        android:id="@+id/mp_item"
        android:clickable="true"
        android:background="?attr/selectableItemBackground"
        android:paddingLeft="@dimen/normal_margin"
        android:paddingStart="@dimen/normal_margin"
        android:paddingRight="@dimen/normal_margin"
        android:paddingEnd="@dimen/normal_margin"
        android:paddingBottom="@dimen/small_margin"
        android:paddingTop="@dimen/small_margin"
        >

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(lu)"
                android:textSize="12sp"
                android:textColor="@color/soft_grey"
                android:id="@+id/mp_item_lu"
                android:layout_marginTop="12dp"
                android:layout_alignTop="@+id/mp_item_content_Layout"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>

        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_toLeftOf="@+id/mp_item_lu"
                android:layout_toStartOf="@+id/mp_item_lu"
                android:layout_above="@+id/mp_item_author"
                android:layout_marginEnd="3dp"
                android:layout_marginRight="3dp"
                android:id="@+id/mp_item_content_Layout">

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="sujet"
                        android:maxLines="2"
                        android:textSize="16sp"
                        android:id="@+id/mp_item_content"
                        android:layout_gravity="start|center_vertical"/>
        </FrameLayout>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="auteur"
                android:id="@+id/mp_item_author"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/soft_grey2"
                android:layout_toLeftOf="@+id/mp_item_date"
                android:layout_toStartOf="@+id/mp_item_date"
                android:layout_marginRight="@dimen/small_margin"
                android:layout_marginEnd="@dimen/small_margin"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30/02/1995"
                android:textStyle="italic"
                android:textSize="12sp"
                android:textColor="@color/primary"
                android:id="@+id/mp_item_date"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                />
</RelativeLayout>